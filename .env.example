# ============================================
# TELFORD COMMUNITY BOARD - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ============================================

# Node Environment
NODE_ENV=development                    # development, production, or test

# Server Configuration
PORT=3000                               # Port server runs on
HOST=localhost                          # Server host

# Database Configuration (PostgreSQL)
DB_NAME=telford_community_db           # Database name
DB_USER=postgres                       # Database username
DB_PASSWORD=your_password_here         # Database password
DB_HOST=localhost                      # Database host
DB_PORT=5432                           # PostgreSQL default port

# Session Configuration
SESSION_SECRET=your_session_secret_here_min_32_chars
SESSION_MAX_AGE=86400000               # Session duration in ms (24 hours)

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_EXPIRE=24h                         # Token expiration time

# File Upload Configuration
MAX_FILE_SIZE=5242880                  # Max file size in bytes (5MB)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# CORS Configuration
CLIENT_URL=http://localhost:5500       # Frontend URL (for CORS)